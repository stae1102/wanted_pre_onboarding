// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Job {
  job_id       Int    @id @default(autoincrement())
  content      String @db.Text
  compensation Int    @default(500000)

  company_id Int

  JobPositions JobPosition[]
  JobUsers     JobUser[]

  Company Company? @relation(fields: [company_id], references: [company_id], onDelete: SetNull)
}

model Company {
  company_id Int    @id @default(autoincrement())
  name       String @db.VarChar(20)
  nation     String @default("한국") @db.VarChar(12)
  region     String @db.VarChar(20)

  Jobs             Job[]
  CompanyPositions CompanyPosition[]
}

model JobUser {
  job_user_id Int @id @default(autoincrement())

  job_id  Int
  user_id Int

  Job  Job  @relation(fields: [job_id], references: [job_id], onDelete: SetNull)
  User User @relation(fields: [user_id], references: [user_id], onDelete: Cascade)
}

model User {
  user_id Int    @id @default(autoincrement())
  name    String @db.VarChar(12)

  JobUsers JobUser[]
}

model Position {
  position_id Int    @id @default(autoincrement())
  position    String @db.VarChar(15)

  Techs            Tech[]
  JobPositions     JobPosition[]
  CompanyPositions CompanyPosition[]
}

model Tech {
  tech_id     Int    @id @default(autoincrement())
  name        String @db.VarChar(12)
  position_id Int

  Position Position @relation(fields: [position_id], references: [position_id])
}

model JobPosition {
  job_id      Int
  position_id Int

  Job      Job      @relation(fields: [job_id], references: [job_id])
  Position Position @relation(fields: [position_id], references: [position_id])

  @@id([job_id, position_id])
}

model CompanyPosition {
  company_id  Int
  position_id Int

  Company  Company  @relation(fields: [company_id], references: [company_id], onDelete: Cascade)
  Position Position @relation(fields: [position_id], references: [position_id])

  @@id([company_id, position_id])
}
